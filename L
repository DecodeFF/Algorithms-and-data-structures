#include <iostream>
#include <vector>

// Функція для обчислення дискретної згортки двох послідовностей
std::vector<int> discreteConvolution(const std::vector<int>& x_k, const std::vector<int>& y_k) {
    int xLength = x_k.size();
    int yLength = y_k.size();
    int resultLength = xLength + yLength - 1;
    std::vector<int> result(resultLength, 0);

    for (int i = 0; i < xLength; ++i) {
        for (int j = 0; j < yLength; ++j) {
            result[i + j] += x_k[i] * y_k[j];
        }
    }

    return result;
}

int main() {
    std::vector<int> x_k = {1, 2, 3};
    std::vector<int> y_k = {2, 1};

    std::vector<int> result = discreteConvolution(x_k, y_k);

    std::cout << "Результат дискретної згортки: ";
    for (int value : result) {
        std::cout << value << " ";
    }
    std::cout << std::endl;

    return 0;
}
